<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="Summator.Summator" behaviorConfiguration="mexBehavior">
        <!--точки подключения\обмен данными xml по http-->
        <endpoint address="Summator.Summator" binding="basicHttpBinding" contract="Summator.ISummator"></endpoint>
        <!--точка подключения\ обмен данными по протоколу tcp в формате бинарного массива-->
        <endpoint address="Summator.Summator" binding="netTcpBinding" contract="Summator.ISummator"></endpoint>
        <!--создали два endpoint к которым могут подключаться различные клиентские приложения |-->
        <!--служебный для обмена мето данными-->
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"></endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080/" />
            <!--проверить список открытых порттов на машине-->
            <add baseAddress="net.tcp://localhost:45617/" />
          </baseAddresses>
        </host>
      </service>
    
    </services>
    <behaviors>
      <!--для определения поведения сервера-->
      <serviceBehaviors>
        <behavior name="mexBehavior">
          <serviceMetadata httpGetEnabled="true" />
          <!--разрешен обмен данными по метоlу get-->
        </behavior>
        <behavior name="debug">
          <serviceDebug includeExceptionDetailInFaults="true" />
          <!--разрешен обмен данными по метоlу get-->
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
